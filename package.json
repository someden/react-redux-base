{
  "name": "react-redux-base",
  "version": "0.1.0",
  "private": false,
  "main": "src/index.js",
  "homepage": "https://someden.github.io/react-redux-base",
  "repository": {
    "type": "git",
    "url": "git@github.com:someden/react-redux-base.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-dev": "env-cmd -f .env.development yarn build",
    "prettify": "prettier 'src/**/*.js' 'src/**/*.jsx' --write",
    "lint": "eslint --ext .js,.jsx src/ --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.2.5",
    "axios": "1.6.0",
    "connected-react-router": "6.7.0",
    "history": "4.10.1",
    "qs": "6.9.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-redux": "7.2.0",
    "react-router-dom": "5.1.2",
    "redux": "4.0.5"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "env-cmd": "10.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.18.3",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "prettier": "1.19.1",
    "react-scripts": "3.4.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "plugins": [
      "import",
      "jsx-a11y",
      "react"
    ],
    "rules": {
      "default-case": "off",
      "import/prefer-default-export": "off",
      "jsx-a11y/control-has-associated-label": "off",
      "jsx-a11y/no-autofocus": "off",
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [],
          "specialLink": [],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "react/sort-comp": "off",
      "react/prop-types": "off",
      "react/no-danger": "off",
      "react/no-array-index-key": "off",
      "react/destructuring-assignment": [
        "off",
        "always"
      ],
      "react/jsx-props-no-spreading": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      }
    }
  },
  "eslintIgnore": [
    "/coverage/*",
    "/build/*",
    "/public/*"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
